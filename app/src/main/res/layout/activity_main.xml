<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Image on Top Left -->

    <!-- Image on Top Right -->

    <!-- Status TextView (Game Stats) -->

    <ImageView
        android:id="@+id/imageViewLeft"
        android:layout_width="199dp"
        android:layout_height="204dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="84dp"
        app:srcCompat="@drawable/john_cena_removebg_preview" />

    <ImageView
        android:id="@+id/imageViewRight"
        android:layout_width="199dp"
        android:layout_height="204dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="2dp"
        app:srcCompat="@drawable/victor_removebg_preview" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Status"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageViewLeft"
        android:layout_marginTop="16dp" />

    <!-- Action Buttons -->

    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="105dp"
        android:text="Restart" />

    <Button
        android:id="@+id/attackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/defendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defend"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/attackButton"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/healButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heal"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/defendButton"
        android:layout_marginStart="8dp" />

</RelativeLayout>
